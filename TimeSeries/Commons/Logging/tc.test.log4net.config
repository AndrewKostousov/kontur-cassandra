<?xml version="1.0" encoding="utf-8"?>

<log4net>
  <appender name="BufferedFileAppender" type="log4net.Appender.BufferingForwardingAppender">
    <bufferSize value="100" />
    <appender-ref ref="FileAppender" />
  </appender>
  <appender name="FileAppender" type="log4net.Appender.FileAppender">
    <file type="log4net.Util.PatternString" value="%property{LogDirectory}\%property{LogFileName}" />
    <layout type="log4net.Layout.PatternLayout"
            value="%date{yyyy-MM-dd HH:mm:ss.fff} %-5level [%thread] %message%newline" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <appendToFile value="true" />
  </appender>
  <appender name="BufferedConsoleAppender" type="log4net.Appender.BufferingForwardingAppender">
    <bufferSize value="100" />
    <appender-ref ref="ConsoleAppender" />
  </appender>
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout"
            value="%date{yyyy-MM-dd HH:mm:ss.fff} %-5level [%thread] %message%newline" />
  </appender>
  <root>
    <level value="INFO" />
    <appender-ref ref="BufferedFileAppender" />
    <appender-ref ref="BufferedConsoleAppender" />
  </root>
  <logger name="SKBKontur.Cassandra.CassandraClient">
    <level value="WARN" />
  </logger>
</log4net>